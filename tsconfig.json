{
  "compileOnSave": false,
  "extends": ["./tsconfig.base.json", "@tsconfig/vite-react/tsconfig.json"],
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": ["vite.config.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
